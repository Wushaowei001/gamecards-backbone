.wrapper
	width 800px
	margin 0 auto
	border 1px solid white
	@media screen and (max-width: 800px)
		width 100%
.display_none
	display none
.opacity_0
	opacity 0	
.board
	.message
		position fixed
		height 80px
		background-color black
		color white
		bottom 0
		left 0
		right 0
		font-size 30px
		text-align center
		padding-top 20px
	.card_message
		position fixed
		z-index 10
		top 0
		left 0
		right 0
		text-align center
	.me 
		margin-top 30px
	.board__indications
		p 
			font-size 18px
			text-align center
			.turn 
				font-weight bold
	.board__points
		span
			font-size 20px
			&.bold
				font-size bold
	.board__title
		text-align center
		font-size 20px !important
	.board__card
		position relative
		transition 0.5s all ease-out
		cursor pointer
		&.player_computer
			&:hover
				> .card__data
					//position absolute
					//display block
					//cursor pointer
		&.player_me 
			&:hover
				margin-top -30px
			&.attack
				margin-top -30px
		.card__cover
			img 
				width 100%
		.card__data
			position relative
			display none
			top 0
			bottom 0
			left 0
			right 0
			background-color white
			img 
				width 100%
			span
				display block
				text-align center
				&.name
					font-weight bold
				&.attack
					font-weight bold
			&.card_clicked
				position absolute
				display block
				cursor pointer	
			&.see_card
				position absolute
				display block
				cursor pointer	
	


